<h1>Phonebook<h1>

<h3>Add a Contact Name Here:</h3>

<form action="/contacts" method="post">
  <label for='contact'>Contact's name:</label>
  <input id='contact' name='contact' type='text'>
  <button type="submit" class='btn btn-default'> Add Contact</button>
</form>


<% if @all_contacts == [] %>
  <p>There are currently no contacts stored.</p>
<% else @all_contacts.each() do |contact| %>
  <ul>
    <li><a href="/contacts/<%= contact.id() %>"><%= contact.name() %></a></li>
  </ul>
  <% end %>
<% end %>

<h4>Type the name of a contact to delete</h4>
<form action="/delete" method="POST">
  <div class="form-group">
    <label class="form-label" for="contact">contact:</label>
    <input type="text" id="contact" name="contact" class="form-control" autofocus>
  </div>
  <button type="submit" class="btn-default">Clear Contact</button>
</form>

